<%- form_url = (@admin_event.new_record? ? admin_events_path(@admin_event) : admin_event_path(@admin_event)) -%>

<%= form_for(@admin_event, url: form_url) do |f| %>
  <% if @admin_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_event.errors.count, "error") %> prohibited this admin_event from being saved:</h2>

      <ul>
      <% @admin_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :client_id %><br>
    <%= f.number_field :client_id %>
  </div>
  <div class="field">
    <%= f.label :event_type_id %><br>
    <%= f.collection_select :event_type_id, EventType.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.datetime_select :start %>
		<%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, default: "Pacific Time (US & Canada)" -%>
  </div>
	<div class="row">
		<div class="field">
			<%= f.label :end %><br>
			<%= f.datetime_select :end %>
		</div>
		<div class="field">
			<%= f.label :placeholder_times %><br>
			<%= f.check_box :placeholder_times %>
		</div>
	</div>
  <div class="field">
    <%= f.label :location_id %><br>
    <%= f.number_field :location_id %>
  </div>
	
	<div class="row">
		<div class="field">
			<%= f.label :booking_status_id %><br>
			<%= f.collection_select :booking_status_id, Admin::BookingStatus.all, :id, :name %>
		</div>
		<div class="field">
			<%= f.label :contract_status_id %><br>
			<%= f.collection_select :contract_status_id, Admin::ContractStatus.all, :id, :name %>
		</div>
		<div class="field">
			<%= f.label :payment_status_id %><br>
			<%= f.collection_select :payment_status_id, Admin::PaymentStatus.all, :id, :name %>
		</div>
	</div>

	<div class="row">
		<div class="field">
			<%= f.label :bride_first_name %><br>
			<%= f.text_field :bride_first_name %>
		</div>
		<div class="field">
			<%= f.label :bride_last_name %><br>
			<%= f.text_field :bride_last_name %>
		</div>
	</div>

	<div class="row">
		<div class="field">
			<%= f.label :groom_first_name %><br>
			<%= f.text_field :groom_first_name %>
		</div>
		<div class="field">
			<%= f.label :groom_last_name %><br>
			<%= f.text_field :groom_last_name %>
		</div>
	</div>

  <div class="field">
    <%= f.label :event_name %><br>
    <%= f.text_field :event_name %>
  </div>
  <div class="field">
    <%= f.label :number_of_cameras %><br>
    <%= f.number_field :number_of_cameras %>
  </div>
  <div class="field">
    <%= f.label :photo_medium_id %><br>
    <%= f.number_field :photo_medium_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
