		<div id="camera">
			<%= image_tag('01a.jpg', class: 'sample') -%>
		</div>
		<div id="screen">
			<%= image_tag('screen_video_screen.png', class: 'video') -%>
			<%= image_tag('screen_video_tube.png', class: 'tube') -%>
		</div>
		<div id="slideshow">
			<%= image_tag('01b.jpg', class: 'sample') -%>
